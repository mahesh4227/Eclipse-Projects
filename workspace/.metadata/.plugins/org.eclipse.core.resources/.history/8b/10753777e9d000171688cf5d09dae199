package sample;

import java.util.Scanner;

public class Searching {

	public static void main(String[] args) {
		Scanner scan=new Scanner(System.in);
		System.out.println("enter array size");
		int n=scan.nextInt();
      int a[]=new int[n];
      for(int i=0;i<n;i++)
      {
    	 a[i]=scan.nextInt();
      }
      System.out.println("enter the element you want to search");
      int s=scan.nextInt();
      int l=0;
      int r=a.length-1;
      while(l<=r)
      {
    	 int m=(l+r)/2;
    	 if(a[m]==s)
    	 {
    		 System.out.println("elemnt is at" +m);
    		 break;
    	 }
    	 else if(a[m]<s)
    	 {
    		 l=m+1;
    	 }
    	 else if(a[m]>s)
    	 {
    		 r=m-1;
    	 }
    	  
      }
	}

}
